    <!-- Script to manage navigation -->
    <script>
        // Show the appropriate login page
        function openLoginPage(userType) {
            document.getElementById('login-page').style.display = 'none';
            if (userType === 'student') {
                document.getElementById('student-login-page').style.display = 'block';
            } else if (userType === 'officer') {
                document.getElementById('officer-login-page').style.display = 'block';
            }
        }

        // Simulate login (replace with backend validation)
        function handleLogin(userType) {
            alert(userType + ' logged in successfully!');
            document.getElementById('student-login-page').style.display = 'none';
            document.getElementById('officer-login-page').style.display = 'none';
            document.getElementById('welcome-page').style.display = 'block';
            return false; // Prevent form submission
        }

        function openBatchPage() {
            document.getElementById('welcome-page').style.display = 'none';
            document.getElementById('batch-page').style.display = 'block';
        }

        function openDepartmentPage(batch) {
            document.getElementById('batch-page').style.display = 'none';
            document.getElementById('department-page').style.display = 'block';
            document.getElementById('batch-title').innerText = 'Batch ' + batch;
        }

        function openRegisterNumberPage(department) {
            alert('You clicked ' + department + ' department. This would open register numbers page.');
            // Redirect to the actual page for that department's register numbers (implement separately)
        }

        function goBack() {
            document.getElementById('student-login-page').style.display = 'none';
            document.getElementById('officer-login-page').style.display = 'none';
            document.getElementById('login-page').style.display = 'block';
        }

        function goBackToLogin() {
            document.getElementById('welcome-page').style.display = 'none';
            document.getElementById('login-page').style.display = 'block';
        }

        function goBackToWelcome() {
            document.getElementById('batch-page').style.display = 'none';
            document.getElementById('welcome-page').style.display = 'block';
        }

        function goBackToBatch() {
            document.getElementById('department-page').style.display = 'none';
            document.getElementById('batch-page').style.display = 'block';
        }
    </script>
</body>
