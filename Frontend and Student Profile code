        // Function to show student profile
        function showProfile(regNo) {
        
            document.getElementById('student-list-section').style.display = 'none';
            document.getElementById('student-profile-section').style.display = 'block';

            // Example student profile data
            const student = {
                photo: 'DKN.jpg',
                name: 'Dhinakaran C',
                address: 'D.NO:119, PUDUCOLONY, 15,VELAMPALAYAM, TIRUPUR -641 652.',
                dob: '2005-04-18',
                marks: '85%',
                skills: ['Python', 'Java', 'Sql' , 'Flutter'],
                cgpa: '8.5',
                cgpaSemester: [8.4, 8.3, 8.3, 8.5, 8.6, 8.7, 8.8, 9.0],
                projects: [
                    { name: 'Stock Forecasting', link: '#' },
                    { name: 'Hospital Management', link: '#' }
                ]
            };

            // Populate the profile
            document.getElementById('student-photo').src = student.photo;
            document.getElementById('student-name').innerText = student.name;
            document.getElementById('student-address').innerText = student.address;
            document.getElementById('student-dob').innerText = student.dob;
            document.getElementById('student-marks').innerText = student.marks;
            document.getElementById('student-skills').innerText = student.skills.join(', ');
            document.getElementById('student-cgpa').innerText = student.cgpa;

            const cgpaSemesterList = document.getElementById('student-cgpa-semester');
            cgpaSemesterList.innerHTML = '';
            student.cgpaSemester.forEach((cgpa, index) => {
                const listItem = document.createElement('li');
                listItem.innerText = `Semester ${index + 1}: ${cgpa}`;
                cgpaSemesterList.appendChild(listItem);
            });

            const projectList = document.getElementById('student-projects');
            projectList.innerHTML = '';
            student.projects.forEach(project => {
                const listItem = document.createElement('li');
                listItem.innerHTML = `<a href="${project.link}">${project.name}</a>`;
                projectList.appendChild(listItem);
            });
        }

        // Back button functionality
        function goBack() {
            document.getElementById('student-list-section').style.display = 'none';
            document.getElementById('department-section').style.display = 'block';
        }

        function goBackToStudents() {
            document.getElementById('student-profile-section').style.display = 'none';
            document.getElementById('student-list-section').style.display = 'block';
        }
    </script>
